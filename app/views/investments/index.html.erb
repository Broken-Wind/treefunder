<p id="notice"><%= notice %></p>

<h1>Investments</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Listing</th>
      <th>Investor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investments.each do |investment| %>
      <tr>
        <td><%= investment.amount %></td>
        <td><%= investment.listing.title %></td>
        <td><%= investment.investor.name %></td>
        <td><%= link_to 'Show Listing', [@listing] %></td>
        <td><%= link_to 'Edit Investment', edit_listing_investment_path(@listing, investment) %></td>
        <td><%= link_to 'Destroy Investment', [@listing, investment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Investment', new_listing_investment_path(@listing) %>
