<main role="main">

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Treefunder</h1>
          <p class="lead text-muted">
		  	Invest in tree-lovin' startups. <br />
			Join our mission to preserve the American Green.
		</p>
          <p>
            <a href="<%= new_listing_path %>" class="btn btn-primary my-2">New Listing</a>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">

          <div class="row">
		  	<% @listings.each do |listing| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="<%= listing.image %>" alt="Card image cap">
                <div class="card-body">
					<h4><%= listing.title %></h4>
                  <p class="card-text"><%= listing.tagline %></p>
                  <div class="d-flex justify-content-between align-items-center">
				  	<div>
					  <small><%= number_to_currency(listing.valuation, {precision: 0}) %> valuation</small>
					</div>
                    <div class="btn-group">
                      <a href="<%= listing_path(listing) %>" class="btn btn-sm btn-outline-secondary">Invest</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
			<% end %>
          </div>
        </div>
      </div>

    </main>