<main role="main">

	<div class="album py-5 bg-light">
	<div class="container">

		<div class="row">
			<div class="col-md-4">
				<div class="card mb-4 box-shadow">
					<img class="card-img-top" src="<%= @listing.image %>" alt="Card image cap">
				</div>
			</div>
			<div class="col-md-8">
				<div class="card mb-4 box-shadow">
					<div class="card-body">
						<h3><%= @listing.title %></h3>
						<p class="lead"><%= @listing.tagline %></p>
						<p><%= @listing.description %></p>
						
						<div class="progress">
							<div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
						<small><%= number_to_currency(@listing.valuation, {precision: 0}) %> valuation</small>
					</div>
				</div>
			</div>
		</div>

		<h2>Investments</h2>
		<ul>
			<% for investment in @listing.investments %>
				<li><%= investment.investor.name %> - <%= investment.amount %></li>
			<% end %>
		</ul>
		

		<ul>
		<li><%= link_to "Invest in " + @listing.title, new_listing_investment_path(@listing) %></li>
		<li><%= link_to "Edit", edit_listing_path(@listing) %></li>
		<li><%= link_to "Destroy", listing_path(@listing),
						method: :delete,
						data: { confirm: "Are you sure?" } %></li>
		</ul>
	</div>
	</div>

</main>