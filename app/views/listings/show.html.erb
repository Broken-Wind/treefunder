<main role="main">

	<div class="album py-5 bg-light">
	<div class="container">

		<div class="row">
		<div class="col-md-4">
			<div class="card mb-4 box-shadow">
			<img class="card-img-top" src="<%= image_url('treesources.jpg') %>" alt="Card image cap">
			<div class="card-body">
				<h4><%= @listing.title %></h4>
				<p class="card-text"><%= @listing.tagline %></p>
				<div class="d-flex justify-content-between align-items-center">
				<div>
					<small><%= number_to_currency(@listing.valuation, {precision: 0}) %> valuation</small>
				</div>
				<div class="btn-group">
					<a href="<%= listing_path(@listing) %>" class="btn btn-sm btn-outline-secondary">Invest</a>
				</div>
				</div>
			</div>
			</div>
		</div>
		</div>
	</div>
	</div>

</main>